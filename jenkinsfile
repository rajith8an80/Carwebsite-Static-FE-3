pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/rajith8an80/Carwebsite-Static-FE-3.git'
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                if [ -d "/var/www/html" ]; then
                    rm -rf /var/www/html/*
                    cp -r ${WORKSPACE}/* /var/www/html/
                else
                    echo "Deploy directory not found!"
                    exit 1
                fi
                '''
            }
        }
    }
}
